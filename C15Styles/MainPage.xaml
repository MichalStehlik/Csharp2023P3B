<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C15Styles.MainPage">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>
        <Style TargetType="Button" x:Key="btnCrimson">
            <Setter Property="BackgroundColor" Value="Crimson" />
            <Setter Property="FontFamily" Value="Times New Roman" />
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="1" />
            <Button Text="2" />
            <Button Text="3" Style="{StaticResource btnSuccess}"/>
            <Label Text="AAA" />
            <Button Text="4" Style="{StaticResource btnDanger}"/>
            <Button Text="5" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
