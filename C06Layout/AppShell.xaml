<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="C06Layout.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:C06Layout"
    xmlns:page="clr-namespace:C06Layout.Pages"
    Shell.FlyoutBehavior="Flyout">
    <FlyoutItem>
        <Tab Title="Home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Tabulka">
            <ShellContent
                Title="Grid"
                ContentTemplate="{DataTemplate page:GridPage}"
                Route="GridPage" />
        </Tab>
        <Tab Title="Stack">
            <ShellContent
                Title="Stack"
                ContentTemplate="{DataTemplate page:StackPage}"
                Route="StackPage" />
        </Tab>
        <Tab Title="Absolute">
            <ShellContent
                Title="Absolute"
                ContentTemplate="{DataTemplate page:AbsolutePage}"
                Route="AbsolutePage" />
        </Tab>
    </FlyoutItem>
</Shell>
