<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="C10MauiNumbers.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Slider 
                x:Name="sliNumber"
                Maximum="100"
                Minimum="0"
                Value="42"
                ValueChanged="sliNumber_ValueChanged"
                />
            <Label x:Name="lblNumber" />
            <Button 
                x:Name="btnGo" 
                Clicked="btnGo_Clicked"
                Text="Go" />
            <Label x:Name="lblDescription" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
